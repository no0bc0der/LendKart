<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3"></div>
  <div id="success" class="alert alert-success"{{#if noMessage}} hidden {{/if}}>
  {{successMsg}}
  </div>
</div>

{{# each products }}
<br>
<div class="row">
  {{# each this }}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
   
      <img src="{{ this.imagePath }}" 
      class ="img-responsive"  style="width:220px;height:121px"> 
      <div class="caption">
        <h3>{{ this.title }}</h3>        
        <div class="clearfix">
          <div class="price">Rs {{ this.price }}{{this.basis}}</div>  
           <p>Owner: {{ this.owner}}</p>  
           
        <p>
          {{!-- <a href="#" class="btn btn-primary"  role="button">View Details</a> --}}       

       <a href="/get-prod/{{ this._id }}" class="btn btn-primary black-background white" role="button">Get Product</a></p>
          </div>
      </div>
    </div>
    </div>
    {{/each}}
  </div><br>
{{/each}}
